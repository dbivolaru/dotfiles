partial alphanumeric_keys modifier_keys
xkb_symbols "lwin" {
    replace key <META> { [ Meta_L, Meta_L ] };
    replace key <LWIN> { [ Meta_L, Meta_L ] };
    modifier_map Mod1 { <META>, <LWIN> };
};

